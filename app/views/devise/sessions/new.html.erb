<% provide(:title, 'Вход') %>
<div class="background-bubble bb-1"></div>
<div class="background-bubble bb-2"></div>
<div class="container text-center mx-4">
  <div class="col-md-5 text-center mx-auto my-5 border rounded p-5 auth-window">
    <h2 class="h1 text-white mb-5">Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="field text-start my-2">
    <%= f.label :email, 'Email', class: 'form-label text-white' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', require: :require %>
  </div>

  <div class="field text-start my-2">
    <%= f.label :password, 'Пароль', class: 'form-label text-white' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', require: :require %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-start my-2">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, 'Запомнить меня', class: 'form-check-label text-white' %>
    </div>
  <% end %>

  <div class="actions my-4 d-flex">
    <div class="w-50 px-1"><%= link_to 'Назад', :back, class: 'btn btn-auth-back w-100' %></div>
    <div class="w-50 px-1"><%= f.submit "Войти", class: 'btn btn-auth-proceed w-100' %></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>